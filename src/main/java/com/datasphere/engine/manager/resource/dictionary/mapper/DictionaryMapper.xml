<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.datalliance.dmp.dictionary.dao.IDictionaryDao">
	
	<resultMap id="baseMap" type="com.datalliance.dmp.dictionary.entity.JusfounWord">
		<id property="id" column="id"/>
		<result property="name" column="name"/>
		<result property="code" column="code"/>
		<result property="group" column="`group`"/>
		<result property="parent" column="parent"/>
		<result property="reserve" column="`reserve`"/>
	</resultMap>
	
	<update id="update">
		update word 
		<set>
			<if test="name != null">
				name = #{name},
			</if>
			<if test="code != null">
				code = #{code},
			</if>
			<if test="group != null">
				`group` = #{group},
			</if>
			<if test="parent != null">
				parent = #{parent},
			</if>
			last_modified=CURRENT_TIMESTAMP
		</set>
		where id = #{id}
	</update>
  	
  	<insert id="insert" useGeneratedKeys="false" keyProperty="id">
  		insert into word
  		<trim prefix="(" suffix=")" suffixOverrides=",">
  			<if test="id != null">
  				id,
  			</if>
  			<if test="name != null">
  				name,
  			</if>
  			<if test="code != null">
  				code,
  			</if>
  			<if test="group != null">
  				`group`,
  			</if>
  			<if test="parent != null">
  				parent,
  			</if>
  		</trim>
  		values
  		<trim prefix="(" suffix=")" suffixOverrides=",">
  			<if test="id != null">
  				#{id},
  			</if>
  			<if test="name != null">
  				#{name},
  			</if>
  			<if test="code != null">
  				#{code},
  			</if>
  			<if test="group != null">
  				#{group},
  			</if>
  			<if test="parent != null">
  				#{parent},
  			</if>
  		</trim>
  	</insert>
  	
  	<delete id="delete">
		delete from word where id = #{id}
	</delete>
	
	<select id="listAll" resultMap="baseMap">
		select * from word
	</select>
	
	<select id="listBy" resultMap="baseMap">
		select * from word 
		<where>
			<if test="group != null">
				`group` = #{group}
			</if>
			<if test="parent != null">
				and parent = #{parent}
			</if>
		</where>
	</select>
	
	<select id="get" resultMap="baseMap">
		select * from word where id = #{id}
	</select>
	
	<select id="exists" resultType="Boolean">
		select count(1) from word where id=#{id}
	</select>
</mapper>